<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_alignParentBottom="true" android:layout_height="match_parent">
    <TextView
        android:id="@+id/helpTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="How can we help? Please email your query at demoappdeveloper@taxiapp.com or call us by taping below button."/>

    <Button
        android:id="@+id/btnCallSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Call Support"
        android:onClick="callHelp"/>
</LinearLayout>

